<Window x:Class="Atmel.XFeatures.SolutionPriorityLoader.SolutionLoadSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SolutionLoadSettings" 
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResize"
        Loaded="window_Loaded" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignWidth="308">
    <Grid>
        <DataGrid ItemsSource="{Binding SolutionInfoList}" Margin="0,0,0,42" />
        <Button Content="Ok" Height="23" Margin="55,370,156,0" Name="ApplyBtn" VerticalAlignment="Top" Width="75" Click="ApplyBtn_Click" />
        <Button Content="Cancel" Height="23" Margin="165,370,46,0" Name="CancelBtn" VerticalAlignment="Top" Width="75" IsCancel="True" IsDefault="True" />
    </Grid>
    
</Window>
